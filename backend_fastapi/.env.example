# AILens Backend Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================================================
# ENVIRONMENT SETTINGS
# ============================================================================
ENVIRONMENT=development
PROJECT_NAME=AILens
DEBUG=true

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://ailens:ailens@localhost:5432/ailens
POSTGRES_USER=ailens
POSTGRES_PASSWORD=ailens
POSTGRES_DB=ailens

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-this-in-production-use-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================================================
# OTP CONFIGURATION
# ============================================================================
OTP_EXPIRY_MINUTES=10

# ============================================================================
# EMAIL CONFIGURATION (Gmail SMTP for OTP)
# ============================================================================
# To get Gmail App Password:
# 1. Enable 2-Factor Authentication on your Gmail account
# 2. Go to myaccount.google.com/apppasswords
# 3. Generate an App Password for "Mail" and "Windows Computer"
# 4. Use the 16-character password below (remove spaces)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-16-character-app-password

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================
STORAGE_DIR=./storage
MAX_UPLOAD_SIZE_MB=50

# ============================================================================
# GOOGLE OAUTH CONFIGURATION
# ============================================================================
GOOGLE_CLIENT_ID=

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================================================
# OPTIONAL (FUTURE)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=ailens-biometrics
